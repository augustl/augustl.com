<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <% if yield_content(:title).blank? %>
      <title>August Lilleaas' blog</title>
    <% else %>
      <title><%= Sanitize.clean(yield_content(:title)) %> (August Lilleaas' blog)</title>
    <% end %>
    <%= stylesheet_link_tag "screen" %>
    <link href="/atom.xml" rel="alternate" title="August Lilleaas' blog" type="application/atom+xml">
  </head>
  <body class="<%= page_classes %>">
    <div class="site-header">
      <p><a href="/" class="large-header-title-text">August Lilleaas</a></p>
      <p>My personal blog.</p>
      <p><a href="/about">About me</a></p>
    </div>
    <%= yield %>
  </body>
</html>
